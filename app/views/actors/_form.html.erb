<% was_validated = actor.errors.any? %>

<%= form_with(model: actor, local: true, novalidate: true, class: "mb-3") do |f| %>
  <div class="form-group">
    <% name_class = "form-control" %>
    <% name_was_invalid = actor.errors.include?(:name) %>

    <% if was_validated %>
      <% if name_was_invalid %>
        <% name_class << " is-invalid" %>
      <% else %>
        <% name_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :name %>
    <%= f.text_field :name, class: name_class, placeholder: "Enter name" %>
    <% if name_was_invalid %>
      <% actor.errors.full_messages_for(:name).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% character_class = "form-control" %>
    <% character_was_invalid = actor.errors.include?(:character) %>

    <% if was_validated %>
      <% if character_was_invalid %>
        <% character_class << " is-invalid" %>
      <% else %>
        <% character_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :character_id %>
    <%= f.number_field :character_id, class: character_class, placeholder: "Enter character" %>
    <% if character_was_invalid %>
      <% actor.errors.full_messages_for(:character).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
